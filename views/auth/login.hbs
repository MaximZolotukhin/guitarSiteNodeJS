
{{> header}}

<div class='auth'>
  <div class='row'>
    <div class='col s12'>
      <ul class='tabs'>
        <li class='tab col s6'><a class='active' href='#login'>Войти</a></li>
        <li class='tab col s6'><a href='#register'>Регистрация</a></li>
      </ul>
    </div>
    <div id='login' class='col s6 offset-s3'>
      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}
      <h1>Войти в магазин</h1>
      <form action='/auth/login' method='post'>
        <div class='input-field'>
          <input id='email' type='email' name='email' class='validate' required />
          <label for='email'>Email</label>
          <span class='helper-text' data-error='Введит email'></span>
        </div>

        <div class='input-field'>
          <input id='password' type='password' name='password' class='validate' required min='1' />
          <label for='password'>Пароль</label>
          <span class='helper-text' data-error='Введите пароль'></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class='btn btn-primary' type='submit'>Войти</button>
      </form>
    </div>
    <div id='register' class='col s6 offset-s3'>
      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}
      <h1>Создать аккаунт</h1>
      <form action='/auth/register' method='post' novalidate>

        <div class='input-field'>
          <input id='regEmail' type='email' name='email' class='validate' required />
          <label for='regEmail'>Email</label>
          <span class='helper-text' data-error='Введит email'></span>
        </div>

        <div class='input-field'>
          <input id='refName' type='text' name='refName' class='validate' required min='1' />
          <label for='refName'>Имя</label>
          <span class='helper-text' data-error='Введите имя'></span>
        </div>

        <div class='input-field'>
          <input id='confirm' type='password' name='confirm' class='validate' required min='1' />
          <label for='confirm'>Пароль</label>
          <span class='helper-text' data-error='Введите пароль'></span>
        </div>

        <div class='input-field'>
          <input id='regPassword' type='password' name='password' class='validate' required min='1' />
          <label for='regPassword'>Повторите пароль</label>
          <span class='helper-text' data-error='Введите пароль'></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class='btn btn-primary' type='submit'>Зарегистрироваться</button>
      </form>
    </div>
  </div>
</div>