
{{> header}}
<h1>Корзина</h1>
<div id='cart'>
  {{#if products.length}}
    <table>
      <thead>
        <tr>
          <th>Производитель</th>
          <th>Модель</th>
          <th>Количество</th>
          <th>Цена за единицу</th>
          <th>Действие</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>{{manufactered}}</td>
            <td>{{modelProduct}}</td>
            <td>{{count}}</td>
            <td>{{priceProduct}}</td>
            <td><button class='bth btn-small js-remove' data-id='{{_id}}'>Удалить</button></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
   <p class='price'><strong>Цена: </strong><span>{{price}}</span></p>
   <form action="/orders" method="POST">
    <button type="submit" class="btn">Сделать заказ</button>
   </form>
  {{else}}
    <p>Корзина</p>
  {{/if}}

</div>
